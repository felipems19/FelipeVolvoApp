@model felipe_santos_volvoapp.Models.Caminhao

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Caminhao</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Modelo" class="control-label"></label>
                <input asp-for="Modelo" class="form-control" />
                <span lang="pt-br" asp-validation-for="Modelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnoFabricacao" class="control-label"></label>
                <select asp-for="AnoFabricacao" class="form-control">
                    <option selected="selected" value="">Selecione o ano de fabricação</option>
                    <option value="@DateTime.Now.Year">@DateTime.Now.Year</option>
                </select>            
                <span lang="pt-br" asp-validation-for="AnoFabricacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnoModelo" class="control-label"></label>
                <select asp-for="AnoModelo" class="form-control">
                    <option selected="selected" value="">Selecione o ano do modelo</option>
                    <option value="@(DateTime.Now.Year-1)">@(DateTime.Now.Year-1)</option>
                    <option value="@DateTime.Now.Year">@DateTime.Now.Year</option>
                </select>
                <span lang="pt-br" asp-validation-for="AnoModelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
